<Window x:Class="Koopakiller.Apps.MusicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Koopakiller.Apps.MusicManager.View"
        mc:Ignorable="d" DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="350" Width="525">
    <TabControl ItemsSource="{Binding Tabs}" ContentTemplateSelector="{StaticResource AutoTypeTemplateSelector}">
        <TabControl.ItemTemplate>
            <DataTemplate >
                <TextBlock Text="{Binding Header}"/>
            </DataTemplate>
       </TabControl.ItemTemplate>
        
    </TabControl>
</Window>

